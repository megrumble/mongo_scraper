<div class="container-fluid article-container">

    {{!-- This is how we can get it done with HandleBars --}}
    {{!-- Unless check for those that are false, which means those that haven't been saved yet --}}

    {{#each articles}} {{#unless this.saved}}
    <div class='panel panel-default'>
        <h3> {{this.title}}</h3>

        <div class='panel-body'>
            <p>{{this.summary}}</p>
            <a href="{{this.link}}" target='_blank'>{{this.link}}</a>

            {{!-- // TODO --}}
            {{!-- Handle Save Article button to save in DB --}}
            <button class='btn btn-success save' data-id="{{this._id}}">Save Article</button>
            
        </div>

    </div>
    {{/unless}} {{/each}}

</div>

